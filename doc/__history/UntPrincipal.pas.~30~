function TForm1.Idade(Data: TDate): Real;
var
  myYear: Word;
	myMonth: Word;
  myDay: Word;

  AuxYear: Word;
	AuxMonth: Word;
  AuxDay: Word;

  Aux: Tdate;

  X: real;

  Vet: array[0..2] of real;

  i: Integer;
begin
  DecodeDate(data, myYear, myMonth, myDay);

  Aux:= now;
  DecodeDate(Aux, AuxYear, AuxMonth,AuxDay);

  X:= myYear - AuxYear;
  Vet[0]:= X;
  X:= myMonth - AuxMonth;
  Vet[1]:= X;
  X:= myDay- AuxDay;
  Vet[2]:= X;


  if (Vet[1] < 1) then
  begin

      x:= Vet[0];

  end
    else
  begin

    if (Vet[1] = 0) and (Vet[2] < 1) then
    begin

      x:= Vet[0];

    end
      else
        x:= Vet[0]+1;

  end;

  Result:= Abs(X);

end;

